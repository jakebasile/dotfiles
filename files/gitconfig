# Jake Basile's .gitconfig
[user]
    name = Jake Basile
    email = git@jakebasile.com
    signingkey = BE570F54
[core]
    excludesfile = ~/.gitignore_global
    editor = vim -f
[mergetool "vimdiff"]
    cmd = /usr/local/bin/vimdiff -fo "$REMOTE" "$MERGED" "$LOCAL"
[merge]
    tool = vimdiff
[difftool "vimdiff"]
    cmd = /usr/local/bin/vimdiff -fo "$REMOTE" "$LOCAL"
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[mergetool]
    prompt = false
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[pretty]
    theone=format:%C(yellow)%h %Cblue%an <%ae> %C(white)(%G?) %Cgreen%cr%Cred%d%n%s%n
[alias]
    pr = !git remote | xargs -n 1 git remote prune
    serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    slog = log --graph --format=theone
    slag = log --graph --format=theone --all
    stat = diff --stat
    cstat = diff --cached --stat
    st = status
    co = checkout
    br = branch
    bra = branch -a
    df = diff
    cdf = diff --cached
    dt = difftool
    cm = commit
[push]
    default = upstream
